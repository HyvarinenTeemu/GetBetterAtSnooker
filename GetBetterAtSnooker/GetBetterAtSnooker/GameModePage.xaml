<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetBetterAtSnooker.GameModePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <Button Text="Snooker" Command="{Binding Snooker}"></Button>
                <Button Text="6-RED" Command="{Binding Six_red}"></Button>
                <Button Text="Team Snooker" Command="{Binding Team_Snooker}"></Button>
                <Button Text="Pair Snooker" Command="{Binding Pair_snooker}"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
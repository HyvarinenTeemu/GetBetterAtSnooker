<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetBetterAtSnooker.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="FillAndExpand">
                <Label Text="Settings" HorizontalOptions="Center" Font="Bold" FontSize="Large"></Label>
            </StackLayout>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                <Label Text="Recording mode" FontSize="Medium"></Label>
            </StackLayout>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                <Button Text="Standard" Command="{Binding Standard}"></Button>
                <Button Text="Professional" Command="{Binding Professional}"></Button>
                <Button Text="Custom" Command="{Binding Custom}"></Button>
            </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <Button Text="Custom" Command="{Binding Custom}"></Button>
                <Button Text="Visual" Command="{Binding Visual}"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>